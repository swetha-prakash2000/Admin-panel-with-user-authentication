<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users List</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin.css">

</head>
<body>

  <% if (success) { %>
    <div class="alert alert-success text-center"><%= success %></div>
  <% } %>
   <% if (error) { %>
    <div class="alert alert-danger text-center"><%= error %></div>
  <% } %>

  <div class="container my-4">
    <div class="card p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-center flex-grow-1">Users List</h3>
        <button class="btn btn-success btn-add" data-bs-toggle="modal" data-bs-target="#addUserModal">+ Add User</button>
      </div>

      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.user_name %></td>
                <td><%= user.email %></td>
                <td>
                  <button class="btn btn-update" data-bs-toggle="modal" data-bs-target="#updateModal-<%= user.id %>">Update</button>
                  <button class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal-<%= user.id %>">Delete</button>

                  <% if (user.isBlock === true) { %>
                    <form method="POST" action="/admin/block-user/<%= user.id %>" style="display:inline">
                      <input type="hidden" name="id" value="<%= user.id %>">
                      <input type="hidden" name="status" value="true">
                      <button class="btn btn-unblock">Unblock</button>
                    </form>
                  <% } else { %>
                    <button class="btn btn-block" data-bs-toggle="modal" data-bs-target="#blockModal-<%= user.id %>">Block</button>
                  <% } %>
                </td>
              </tr>

              <!-- Update Modal -->
              <div class="modal fade" id="updateModal-<%= user.id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <form action="/admin/update-user" method="POST">
                      <div class="modal-header">
                        <h5 class="modal-title">Update User</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <div class="mb-3">
                          <label>Email</label>
                          <input type="email" name="email" class="form-control" value="<%= user.email %>" required>
                        </div>
                        <div class="mb-3">
                          <label>New Password</label>
                          <!-- Front end validation here -->
                          <input type="password" name="password" minlength="5" class="form-control">
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

              <!-- Delete Modal -->
              <div class="modal fade" id="deleteModal-<%= user.id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <form action="/admin/delete-user" method="POST">
                      <div class="modal-header">
                        <h5 class="modal-title">Delete User</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        Are you sure you want to delete <strong><%= user.user_name %></strong>?
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Delete</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

              <!-- Block Modal -->
              <div class="modal fade" id="blockModal-<%= user.id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <form method="POST" action="/admin/block-user/<%= user.id %>">
                      <div class="modal-header">
                        <h5 class="modal-title">Block User</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <input type="hidden" name="status" value="false">
                        Are you sure you want to block <strong><%= user.user_name %></strong>?
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Block</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Add User Modal -->
  <div class="modal fade" id="addUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/admin/add-user" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Add User</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label>Email</label>
              <input type="email" name="email" class="form-control" required>
            </div>
            <div class="mb-3">
              <label>Password</label>
              <input type="password" name="password" minlength="5" class="form-control" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Add User</button>
          </div>
        </form>
      </div>
    </div>
  </div>

    <!-- Logout Button -->
    <!-- Wrapper to center the button -->
<div style="display: flex; justify-content: center; margin-top: 40px;">
  <form action="/logoutAdmin" method="GET">
    <button type="submit" class="logout-admin">Logout</button>
  </form>
</div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  window.addEventListener("pageshow", function (event) {
    if (event.persisted) {
      window.location.reload();
    }
  });
</script>
  
</body>

</html>